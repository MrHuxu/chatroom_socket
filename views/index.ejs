<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
  </head>
  <body>
    <div ng-app='chat_room_module'>
      <div ng-controller='chat_controller'>
        <ul id='messages'>
          <li ng-repeat='msg in messages track by $index'>
            <p ng-bind='msg'></p>
          </li>
        </ul>
        <form>
          <input ng-model='message'/>
          <button ng-click='send(message)'>Send</button>
        </form>
      </div>
    </div>
  </body>
  <script type="text/javascript" src='/bower_components/jquery/dist/jquery.min.js'></script>
  <script type='text/javascript' src='/socket.io/socket.io.js'></script>
  <script type="text/javascript" src='/bower_components/angular/angular.js'></script>
  <script type="text/javascript" src='/javascripts/chat_room_module.js'></script>
</html>
